@model SoftParking.Models.ubicacion

@{
    ViewBag.Title = "ASINAR UBICACION";
}
<style>
    #minput {
        float: right;
        margin-right: 80px;
    }

    label {
        width: 25%;
    }
    #barraP {
    
    float:left;
    }
</style>
<div class="col-lg-offset-6"><img src="~/Imagenes/Banners/ubicaciones.png" width="392" height="72" /></div>
<h2>CREAR UBICACIONES</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ubicacion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-xs-5 col-md-5 col-lg-5">
                <label class="control-label col-sm-2" for="tama_ubic">TAMAÑO </label>
                <input class="form-control text-box single-line" id="minput" name="tama_ubic" type="text" value="" placeholder="dimensiones" />
                <span class="field-validation-valid text-danger" data-valmsg-for="tama_ubic" data-valmsg-replace="true"></span>
            </div>


            <div class="col-xs-5 col-md-5 col-lg-5">
                <label class="control-label col-sm-2" for="esta_ubic">ESTADO</label>

                <input class="form-control text-box single-line" id="minput" name="esta_ubic" type="text" value="DISPONIBLE" />
                <span class="field-validation-valid text-danger" data-valmsg-for="esta_ubic" data-valmsg-replace="true"></span>
            </div>


            <div class="col-xs-5 col-md-5 col-lg-5">
                <label class="control-label col-sm-2" for="piso_ubic">#PISO</label>

                <input class="form-control text-box single-line" data-val="true" data-val-number="El campo piso_ubic debe ser un número." id="minput" name="piso_ubic" type="number" value="" />
                <span class="field-validation-valid text-danger" data-valmsg-for="piso_ubic" data-valmsg-replace="true"></span>
            </div>



            <div class="col-xs-5 col-md-5 col-lg-5">
                <label class="control-label col-sm-2" for="dist_ubic">DISTINTIVO</label>
                <input class="form-control text-box single-line" id="minput" name="dist_ubic" type="text" value=""placeholder="A,B,C,ETC.."  required/>
                <span class="field-validation-valid text-danger" data-valmsg-for="dist_ubic" data-valmsg-replace="true"></span>
            </div>
            <div class="col-xs-5 col-md-5 col-lg-5">
                <label class="control-label col-sm-2" for="dist_ubic">ESTABLECER UBICACIONES</label>
                <input class="form-control text-box single-line" id="minput" name="posicion" type="number" value="1" min="1"/>
            </div>
        
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </div>
    </div>
    
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
