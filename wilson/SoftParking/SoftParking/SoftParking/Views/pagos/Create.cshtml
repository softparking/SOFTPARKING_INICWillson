@model IEnumerable<SoftParking.Models.pago>

@{
    ViewBag.Title = "Create";
    /*--*TARIFICACION*--*/
    var placa = ViewBag.PlacasPago;
    var CodServicio = ViewBag.CodiServicio;
    var tiempoT = ViewBag.TiempoTotal;
    var ValorTiemp = ViewBag.valorTiempo;
    var porcentaje = ViewBag.porcentajeIva;
    var TotalApagar = ViewBag.ValorAPagar;
    /*---*DATOS BASICOS DEL VEHICULO*---*/
    var consultaVehi= ViewBag.TipoVehiculo;
    var precioVehiculo= ViewBag.PrecioVehi;
    var precioMin = ViewBag.PrecioMin;
    var tarifaHoraVeh= ViewBag.ConsultaTarifa;
    var estado = ViewBag.estado;
}

@if (estado!= null)
{
using (Html.BeginForm())
{  


    @Html.AntiForgeryToken()
    <h4>pago</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group container-fluid center-block">
            
            <div class="col-sm-10 center-block " style="float: none; margin-left: auto; margin-right: auto;">
                <div class="panel panel-primary">
                    <div class="panel-heading">VALOR A PAGAR </div>
                    <div class="panel-body">

                        <div class="form-group col-md-10" style="float: none; margin-left: auto; margin-right: auto;">
                            <div class="form-group col-md-5">
                                <label for="fecha" style="float:left">FECHA</label>
                                <input type="datetime" name="fecha" value="@DateTime.Now.ToLocalTime()" readonly style="float:left">
                            
                            </div> 

                            <div class="form-group col-md-5">
                                <label for="fecha" style="float:left">#FACTURA</label>
                                <input type="number" name="numFacServ" value="@CodServicio" readonly style="float:left" >
                            </div>
                                <br>
                            <div class="form-group col-md-5">
                                <label for="PLACA" style="float:left">PLACA </label><br />
                                <input type="text" name="placa" value="@placa" readonly>
                                <label for="tipveh" style="float:left">TIPO VEHICULO </label><br />
                                <input type="text" name="TipVeh" value="@consultaVehi" readonly>
                            </div>
                                <br>
                            <div class="form-group col-md-5">
                                <label for="TIPVEH" style="float:left">VALOR HORA </label><br />
                                <input type="text" name="valhor" value="@tarifaHoraVeh" readonly>
                                <label for="TIPVEH" style="float:left">VALOR MINUTO </label><br />
                                <input type="text" name="valmin" value="@precioMin" readonly>
                            </div>
                                <br/>
                            <div class="form-group col-md-10">
                                <label for="MEP" style="float:left">METODO PAGO</label>
                                <select name="metodo_pago" required>
                                    <option value="">Ninguno</option>
                                    <option value="Efectivo" class="text-success">EFECTIVO</option>
                                    <option value="Tarjeta Credito" class="text-info">TARJETA CREDITO</option>
                                </select>
                            </div>
                            <br>

                            <div class="form-group col-md-5">
                                <label for="TiempoTotal" style="float:left">TIEMPO TOTAL</label><br />
                                <input type="datetime" name="tiempoTotal" value="@tiempoT" readonly>
                  
                            </div>
                                <br>
                            <div class="form-group col-md-5">
                                <label for="VALOR" style="float:left">VALOR</label><br />
                                <input type="number" name="ValorTiemp" value="@ValorTiemp" readonly>
                            </div>

                            <div class="form-group col-md-5">
                                <label for="IVA" style="float:left">IVA 16%</label><br>
                                <input type="number" name="ivaPago" value="@porcentaje" readonly>
                               
                            </div>
                            <div class="form-group col-md-5">
                                <label for="TOTAL" style="float:left">TOTAL A PAGAR</label><br>
                                <input type="number" name="totalAPagar" value="@TotalApagar" readonly>
                            </div>
                            
                            </div>


                    </div>
                    <div class="panel-footer text-center">
                        <div class="form-group">  
                            <button type="submit" class="btn btn-info" name="Gpagos" value="Gpagos" formaction="@Url.Action("Gpagos","Pagos")">Generar Recibo</button>
                        </div>

                    </div>
                </div>
            </div>

                
            </div>
}

}
