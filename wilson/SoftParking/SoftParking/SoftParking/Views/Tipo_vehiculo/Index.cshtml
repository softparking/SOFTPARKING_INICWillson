@model IEnumerable<SoftParking.Models.tipo_vehiculo>
@using SoftParking.Models;
@{
  ViewBag.Title = "Tipos Vehiculo";
  var USUARIO = Session["ControlUsuario"] as ControlUsuario;
}
@if (USUARIO != null)
{
  <h2>Tipos de Vehiculo</h2>
  <table class="table  table-responsive table-bordered table-striped table-hover">
    <tr>
      <th>CODIGO</th>
      <th>DESCRIPCION</th>      
      <th>TARIFA</th>
      <th colspan="2">ACCIONES</th>
    </tr>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.tipo_vehi)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.nomb_vehi)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.tari_vehi)
        </td>
        <td align="center">
          <button type="button" class="btn btn-danger" onclick="ConfEliminaTipoV('@item.tipo_vehi');">
            Eliminar
            <span class="glyphicon glyphicon-erase"></span>
          </button>
        </td>
        <td align="center">
          <a class="btn btn-warning" href="@Url.Action("Edit","Tipo_vehiculo", new { id = item.tipo_vehi})">
            Editar
            <span class="glyphicon glyphicon-edit"></span>
          </a>
        </td>
      </tr>
    }
  </table>
  <div class="container-fluid col-md-12" align="center">
    <a class="btn btn-success" href="@Url.Action("Create","Tipo_vehiculo")">
      Crear Tipo Vehiculo
      <span class="glyphicon glyphicon-plus"></span>
    </a>
  </div>
}
else
{
<br /><br /><br />
<h1>PAGINA NO DISPONIBLE </h1>
<a class="btn btn-danger" href="@Url.Action("Login","Logeo")">
  Volver
  <span class="glyphicon glyphicon-backward"></span>
</a>
}
